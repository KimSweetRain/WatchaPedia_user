<?xml version="1.0"?>
<thlogic>
    <attr sel="#TvBox" th:object="${tv}">
        <attr sel=".tv-title" th:text="${tv.tvTitle}"/>
        <attr sel=".tv-title/p" th:text="${tv.tvTitle}"/>
        <attr sel=".tv-making-date" th:text="${tv.tvMakingDate} + '・'+ ${tv.tvCountry}+ '・'+${tv.tvChannel}"/>
        <attr sel=".tv-channel" th:text="${tv.tvChannel}" />
        <attr sel=".tv-tvThumbnail" th:src="${tv.tvThumbnail}" />
        <attr sel=".tv-idx" th:text="${tv.tvIdx}" />
        <attr sel=".tv-summary  " th:text="${tv.tvSummary}"/>
        <attr sel="img.tvBackImg" th:src="${tv.tvBackImg}"/>
        <attr sel=".tv-title-org" th:text="${tv.tvTitleOrg}" />
        <attr sel=".tv-watch" th:href="${tv.tvWatch}"/>
        <attr sel=".tv-video" th:src="${tv.tvVideo}"/>
    </attr>

    <attr sel="#people" th:object="${tv}">
        <attr sel=".tb_people" th:text ="${tv.tvPeople}"/>
    </attr>

</thlogic>