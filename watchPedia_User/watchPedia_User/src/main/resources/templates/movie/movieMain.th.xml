<?xml version="1.0"?>
<thlogic>
    <attr sel="#movie-table" th:remove="all-but-first">
        <attr sel="#movie-tr" th:each="movie, i : ${movies}" >
            <attr sel="#movie-title" th:text="${movie.movieTitle}"/>
            <attr sel="#movie-making-date" th:text="${movie.movieMakingDate} + '・'+ ${movie.movieCountry}+ '・'+${movie.movieChannel}"/>
            <attr sel="#movie-tvThumbnail" th:src="${movie.movieThumbnail}" />
            <attr sel="#movie-idx" th:text="${i.count}" />
        </attr>
    </attr>

</thlogic>